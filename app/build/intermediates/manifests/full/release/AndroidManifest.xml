<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yorozuyastudios.pro.com.meme_inator"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon3"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:noHistory="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="yorozuyastudios.pro.com.meme_inator.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="yorozuyastudios.pro.com.meme_inator.MainActivity" />
        <activity android:name="yorozuyastudios.pro.com.meme_inator.ChooseActivity" />
        <activity android:name="yorozuyastudios.pro.com.meme_inator.EnterTextActivity" />
        <activity android:name="yorozuyastudios.pro.com.meme_inator.MemeListActivity" >
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" >
                </action>
            </intent-filter>
        </activity>
    </application>

</manifest>