<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryC"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/stage_two_instructions_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="ENTER THE TEXT FOR YOUR MEME"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/top_text_edittext"
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="ENTER TOP TEXT"
        android:nextFocusDown="@+id/bottom_text_edittext"
        android:singleLine="true" />


    <EditText
        android:id="@+id/mid_text_edittext"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="ENTER SECOND LINE"
        android:nextFocusDown="@+id/bottom_text_edittext"
        android:singleLine="true" />


    <ImageView
        android:id="@+id/selected_picture_imageview"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_weight="2"/>



    <EditText
        android:id="@+id/bottom_text_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="ENTER BOTTOM TEXT"
        android:singleLine="true" />

    <Button
        android:id="@+id/write_text_to_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="INITIATE MEME-INATOR"
        android:background="@drawable/button_selector"/>



    <Button
        android:id="@+id/save_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE IMAGE TO START A WAR"
        android:background="@drawable/button_selector"/>


</LinearLayout>
    </ScrollView>